<!-- back to Album link -->
<a class="left-side italic-text" href="/albums/<%= @album.id %>">
  back to Album
</a>

<h3 class="no-bottom-space">Edit Album</h3>

<!-- form posts data to UPDATE method -->
<form method="post" action="/albums/<%= @album.id %>/update" >

  <!-- fields get data from @album var -->
  
  <label for="title">Title:</label>
  <input type="text" name="title" value="<%= @album.title %>">

  <label for="artist">Artist:</label>
  <input type="text" name="artist" value="<%= @artist.name %>">

  <label for="artist">Genre:</label>
  <input type="text" name="genre" value="<%= @album.genre %>">

  <label for="quantity">Quantity:</label>
  <input type="number" name="quantity" value="<%= @album.quantity %>">

  <label for="buy_price">Buy Price:</label>
  <input type="number" name="buy_price" value="<%= @album.buy_price %>">

  <label for="sell_price">Sell Price:</label>
  <input type="number" name="sell_price" value="<%= @album.sell_price %>">

  <input type="submit" value="Save Changes">

</form>
