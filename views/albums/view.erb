<h3 class="no-bottom-space top-space">Album Info</h3>

<!-- Album Details -->
<table>

  <tr>
    <th>ID</th>
    <td><%= @album.id %></td>
  </tr>

  <tr>
    <th>Title</th>
    <td><%= @album.title %></td>
  </tr>

  <tr>
    <th>Artist</th>
    <td>
      <!-- get Artist name from artist_id, make it a link -->
      <a href="/artists/<%= @album.artist_id %>">
        <%= Artist.find_by_id(@album.artist_id).name %>
      </a>
    </td>
  </tr>

  <tr>
    <th>Genre</th>
    <td><%= @album.genre %></td>
  </tr>

  <tr>
    <th>Buy/Sell Price (Â£)</th>
    <td><%= @album.buy_price %>/<%= @album.sell_price %></td>
  </tr>

  <tr>
    <th>Quantity</th>
    <td><%= @album.quantity %></td>
  </tr>

  <tr>
    <th>Stock Level</th>
    <!-- assign CSS class based on Stock Level -->
    <td class="<%= @album.stock_level %>">
      <%= @album.stock_level %>
    </td>
  </tr>

</table>

<!-- EDIT and UPDATE links -->
<section class="flex_item_compact">
  <a class="big_link" href="./<%= @album.id %>/edit">Edit</a>
  <a class="big_link" href="./<%= @album.id %>/delete_are_you_sure">Delete</a>
</section>
